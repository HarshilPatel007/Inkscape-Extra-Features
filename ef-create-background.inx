<?xml version="1.0" encoding="UTF-8"?>
<inkscape-extension xmlns="http://www.inkscape.org/namespace/inkscape/extension">
    <name>Create Background</name>
    <id>org.inkscape.ef.createbackground</id>

    <dependency type="executable" location="extensions">inkex.py</dependency>

    <param name="create" type="bool" gui-text="Create Background">true</param>
    <param type="color" name="background_color" type="color" appearance="colorbutton" gui-text="Select Background Color" >#000000FF</param>

    <effect>
		<object-type>all</object-type>
		<effects-menu>
			<submenu name="Inkscape Extra Features"/>
		</effects-menu>
	</effect>

    <script>
        <command location="inx" interpreter="python">ef-create-background.py</command>
    </script>
</inkscape-extension>